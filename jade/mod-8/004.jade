								div.banner-video
									div.span8
										div#video
											figure.galeria
												a.example-image-link(href='https://ubosquemoodle.unbosque.edu.co/diseno/cursos/osteoporosis-amgen/images/mod8/0008.jpg' data-lightbox='example-1')
													img.example-image(src='https://ubosquemoodle.unbosque.edu.co/diseno/cursos/osteoporosis-amgen/images/mod8/0008.jpg' alt='Figura 8')
									div.span4
